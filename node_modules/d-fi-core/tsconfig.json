{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019", // Node.js 12
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
